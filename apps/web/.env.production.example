# ============================================
# SimplePro-v3 Web App - PRODUCTION ENVIRONMENT
# ============================================
#
# SECURITY WARNING: This is a template file.
# NEVER commit actual production values to version control.
#
# Last Updated: 2025-10-02
# ============================================

# ============================================
# NEXT.JS CONFIGURATION
# ============================================

# Node Environment (MUST be 'production')
NODE_ENV=production

# Server Port (optional - Next.js defaults to 3000)
PORT=3009

# ============================================
# API CONNECTION
# ============================================
#
# IMPORTANT: These must match your production API deployment
# Use HTTPS in production
# ============================================

# API Base URL (your production API domain)
# REQUIRED - Used for all API requests
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Alternative API Base URL (for internal use, if different)
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com

# WebSocket URL (for real-time features)
# Should match your API WebSocket endpoint
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.yourdomain.com

# ============================================
# APPLICATION INFORMATION
# ============================================

# Application Name (displayed in UI)
NEXT_PUBLIC_APP_NAME=SimplePro

# Application Version (displayed in footer/about)
NEXT_PUBLIC_APP_VERSION=3.0.0

# Company/Brand Name
NEXT_PUBLIC_COMPANY_NAME=Your Company Name

# Support Email
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com

# ============================================
# FEATURE FLAGS
# ============================================

# Enable real-time messaging features
NEXT_PUBLIC_ENABLE_MESSAGING=true

# Enable crew scheduling features
NEXT_PUBLIC_ENABLE_CREW_SCHEDULING=true

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable mobile app QR code linking
NEXT_PUBLIC_ENABLE_MOBILE_LINKING=true

# Enable dark mode toggle
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Enable notifications
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ============================================
# ANALYTICS & TRACKING
# ============================================

# Google Analytics Measurement ID (G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Google Tag Manager ID (GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=

# Mixpanel Project Token
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Sentry DSN (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Sentry Environment
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Enable Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Google Maps API Key (for address autocomplete, maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Stripe Publishable Key (for payment processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Intercom App ID (for customer support chat)
NEXT_PUBLIC_INTERCOM_APP_ID=

# Firebase Configuration (for push notifications)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================
# CDN & ASSET CONFIGURATION
# ============================================

# CDN Base URL (for static assets)
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# Image Optimization Domain
NEXT_PUBLIC_IMAGE_DOMAIN=yourdomain.com

# ============================================
# SEO & SOCIAL MEDIA
# ============================================

# Site URL (for canonical URLs and social sharing)
NEXT_PUBLIC_SITE_URL=https://app.yourdomain.com

# Default OG Image (for social media sharing)
NEXT_PUBLIC_OG_IMAGE=https://yourdomain.com/og-image.png

# Twitter Handle (without @)
NEXT_PUBLIC_TWITTER_HANDLE=yourcompany

# Facebook App ID
NEXT_PUBLIC_FACEBOOK_APP_ID=

# ============================================
# BUILD-TIME CONFIGURATION
# ============================================

# Next.js Build ID (optional - auto-generated if not set)
# BUILD_ID=

# Enable Source Maps in Production (false recommended)
NEXT_PUBLIC_ENABLE_SOURCE_MAPS=false

# Enable React Strict Mode
NEXT_PUBLIC_STRICT_MODE=true

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Content Security Policy (leave empty to use defaults)
CSP_POLICY=

# Enable HSTS Header
ENABLE_HSTS=true

# Session Timeout (milliseconds) - 1 hour
SESSION_TIMEOUT=3600000

# ============================================
# LOCALE & TIMEZONE
# ============================================

# Default Locale
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# Supported Locales (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCALES=en-US,es-ES,fr-FR

# Default Timezone Display
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/New_York

# ============================================
# UI CONFIGURATION
# ============================================

# Items per page in tables
NEXT_PUBLIC_ITEMS_PER_PAGE=20

# Max file upload size (bytes) - 50MB
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# Allowed image formats
NEXT_PUBLIC_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Date format (moment.js format)
NEXT_PUBLIC_DATE_FORMAT=MM/DD/YYYY

# Time format (moment.js format)
NEXT_PUBLIC_TIME_FORMAT=hh:mm A

# Currency
NEXT_PUBLIC_CURRENCY=USD

# Currency Symbol
NEXT_PUBLIC_CURRENCY_SYMBOL=$

# ============================================
# DEVELOPMENT HELPERS (DISABLE IN PRODUCTION)
# ============================================

# Show debug information (MUST be false in production)
NEXT_PUBLIC_DEBUG=false

# Enable Redux DevTools (MUST be false in production)
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=false

# Mock API calls (MUST be false in production)
NEXT_PUBLIC_MOCK_API=false

# ============================================
# END OF PRODUCTION CONFIGURATION
# ============================================
#
# DEPLOYMENT CHECKLIST:
# □ All NEXT_PUBLIC_* variables are set correctly
# □ API URLs use HTTPS
# □ WebSocket URL uses WSS (secure WebSocket)
# □ Analytics tracking IDs are configured
# □ Third-party API keys are production keys
# □ Debug flags are disabled
# □ Source maps are disabled
# □ CDN URLs are correct
# □ Social media meta tags are configured
#
# ============================================
