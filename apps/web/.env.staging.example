# ============================================
# SimplePro-v3 Web App - STAGING ENVIRONMENT
# ============================================
#
# Staging configuration for testing and QA
# Should mirror production but with staging infrastructure
#
# Last Updated: 2025-10-02
# ============================================

# ============================================
# NEXT.JS CONFIGURATION
# ============================================

NODE_ENV=staging
PORT=3009

# ============================================
# API CONNECTION
# ============================================

# Staging API URLs
NEXT_PUBLIC_API_URL=https://api-staging.yourdomain.com
NEXT_PUBLIC_API_BASE_URL=https://api-staging.yourdomain.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://api-staging.yourdomain.com

# ============================================
# APPLICATION INFORMATION
# ============================================

NEXT_PUBLIC_APP_NAME=SimplePro (Staging)
NEXT_PUBLIC_APP_VERSION=3.0.0
NEXT_PUBLIC_COMPANY_NAME=Your Company Name
NEXT_PUBLIC_SUPPORT_EMAIL=staging-support@yourdomain.com

# ============================================
# FEATURE FLAGS
# ============================================

# All features can be enabled in staging for testing
NEXT_PUBLIC_ENABLE_MESSAGING=true
NEXT_PUBLIC_ENABLE_CREW_SCHEDULING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOBILE_LINKING=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ============================================
# ANALYTICS & TRACKING
# ============================================

# Use staging/test analytics properties
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_GTM_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=staging
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Use test API keys for staging
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_INTERCOM_APP_ID=

# Firebase Staging Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================
# CDN & ASSET CONFIGURATION
# ============================================

NEXT_PUBLIC_CDN_URL=https://cdn-staging.yourdomain.com
NEXT_PUBLIC_IMAGE_DOMAIN=staging.yourdomain.com

# ============================================
# SEO & SOCIAL MEDIA
# ============================================

NEXT_PUBLIC_SITE_URL=https://staging.yourdomain.com
NEXT_PUBLIC_OG_IMAGE=https://staging.yourdomain.com/og-image.png
NEXT_PUBLIC_TWITTER_HANDLE=yourcompany
NEXT_PUBLIC_FACEBOOK_APP_ID=

# ============================================
# BUILD-TIME CONFIGURATION
# ============================================

# Can enable source maps in staging for debugging
NEXT_PUBLIC_ENABLE_SOURCE_MAPS=true
NEXT_PUBLIC_STRICT_MODE=true

# ============================================
# SECURITY CONFIGURATION
# ============================================

CSP_POLICY=
ENABLE_HSTS=true
SESSION_TIMEOUT=7200000

# ============================================
# LOCALE & TIMEZONE
# ============================================

NEXT_PUBLIC_DEFAULT_LOCALE=en-US
NEXT_PUBLIC_SUPPORTED_LOCALES=en-US,es-ES,fr-FR
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/New_York

# ============================================
# UI CONFIGURATION
# ============================================

NEXT_PUBLIC_ITEMS_PER_PAGE=20
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
NEXT_PUBLIC_DATE_FORMAT=MM/DD/YYYY
NEXT_PUBLIC_TIME_FORMAT=hh:mm A
NEXT_PUBLIC_CURRENCY=USD
NEXT_PUBLIC_CURRENCY_SYMBOL=$

# ============================================
# DEVELOPMENT HELPERS
# ============================================

# Can enable debug features in staging for troubleshooting
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true
NEXT_PUBLIC_MOCK_API=false

# ============================================
# STAGING-SPECIFIC SETTINGS
# ============================================

# Show staging banner/watermark
NEXT_PUBLIC_SHOW_STAGING_BANNER=true

# Enable feature previews
NEXT_PUBLIC_ENABLE_FEATURE_PREVIEWS=true

# ============================================
# END OF STAGING CONFIGURATION
# ============================================
