# MinIO S3-Compatible Storage Configuration
# Add these variables to your .env.local file for document storage

# MinIO Endpoint (Docker service name for internal network, localhost for host access)
# Use 'minio' when API runs in Docker, 'localhost' when API runs on host
MINIO_ENDPOINT=localhost

# MinIO Port (default: 9000 for API, 9001 for console)
MINIO_PORT=9000

# MinIO Access Credentials
# These should match the values in docker-compose.dev.yml
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=simplepro_minio_2024

# MinIO SSL Configuration (false for development, true for production)
MINIO_USE_SSL=false

# Default Bucket Name for Document Storage
MINIO_BUCKET=simplepro-documents

# Optional: MinIO Root User/Password (for creating buckets)
# These are only needed if you need to create buckets programmatically
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=simplepro_minio_2024
