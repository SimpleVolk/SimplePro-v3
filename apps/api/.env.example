# SimplePro API Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env files to version control

# =============================================================================
# SECURITY CRITICAL - REQUIRED FOR PRODUCTION
# =============================================================================

# JWT Secret (REQUIRED) - Must be at least 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long-change-this

# MongoDB Connection (REQUIRED)
# Use secure credentials, not default ones
MONGODB_URI=mongodb://username:password@localhost:27017/simplepro?authSource=simplepro

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=4000

# CORS Configuration (production should be specific domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# =============================================================================
# SECURITY HEADERS AND RATE LIMITING
# =============================================================================

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
REFRESH_TOKEN_TIMEOUT_DAYS=7

# =============================================================================
# EXTERNAL SERVICES (when implemented)
# =============================================================================

# Email Service (for notifications)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=

# SMS Service (for notifications)
# SMS_API_KEY=
# SMS_API_SECRET=

# File Storage (MinIO/S3)
# STORAGE_ENDPOINT=
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=
# STORAGE_BUCKET=

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Level
LOG_LEVEL=info

# Application Insights / Monitoring
# APPLICATIONINSIGHTS_CONNECTION_STRING=

# =============================================================================
# SECURITY RECOMMENDATIONS
# =============================================================================

# 1. Generate secure random values for all secrets
# 2. Use environment-specific values (dev/staging/prod)
# 3. Rotate secrets regularly
# 4. Use a secrets management service in production
# 5. Never commit actual secrets to version control
# 6. Use HTTPS in production
# 7. Configure firewalls and network security
# 8. Enable database authentication and SSL