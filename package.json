{
  "name": "simplepro-v3",
  "version": "1.0.0",
  "description": "SimplePro - Moving Company Management System",
  "private": true,
  "author": "Simple Moves",
  "license": "PROPRIETARY",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"nx dev api\" \"nx dev web\"",
    "dev:api": "nx dev api",
    "dev:web": "nx dev web",
    "build": "nx run-many --target=build --all --parallel",
    "test": "nx run-many --target=test --all --parallel",
    "test:unit": "nx run-many --target=test --all --parallel",
    "test:integration": "jest --config=apps/api/jest.integration.config.ts",
    "test:e2e": "nx run-many --target=e2e --all --parallel",
    "test:api": "nx test api",
    "test:api:unit": "cd apps/api && npm run test:unit",
    "test:api:integration": "cd apps/api && jest --config=jest.integration.config.ts",
    "test:web": "nx test web",
    "test:pricing": "cd packages/pricing-engine && npm test",
    "test:coverage": "nx run-many --target=test --all --parallel --coverage",
    "test:coverage:api": "nx test api --coverage",
    "test:coverage:web": "nx test web --coverage",
    "test:coverage:pricing": "cd packages/pricing-engine && npm test -- --coverage",
    "test:watch": "nx run-many --target=test --all --parallel --watch",
    "test:ci": "nx run-many --target=test --all --parallel --ci --coverage --watchAll=false",
    "lint": "nx run-many --target=lint --all --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:secure": "docker-compose -f docker-compose.prod.secure.yml up -d --build",
    "docker:prod:secure:down": "docker-compose -f docker-compose.prod.secure.yml down",
    "docker:prod:secure:logs": "docker-compose -f docker-compose.prod.secure.yml logs -f",
    "deploy:dev": "bash scripts/deploy-dev.sh",
    "deploy:prod": "bash scripts/deploy-prod.sh",
    "deploy:prod:secure": "bash scripts/secure-deploy.sh deploy",
    "security:check": "bash scripts/secure-deploy.sh check",
    "validate:env": "bash scripts/validate-environment.sh",
    "secrets:setup": "bash scripts/production-secrets.sh init",
    "secrets:validate": "bash scripts/production-secrets.sh validate",
    "secrets:rotate": "bash scripts/production-secrets.sh rotate",
    "secrets:generate-env": "bash scripts/production-secrets.sh generate-env",
    "backup:create": "bash scripts/backup-restore.sh backup",
    "backup:cleanup": "bash scripts/backup-restore.sh cleanup",
    "ssl:generate": "bash docker/ssl/generate-certs.sh",
    "db:migrate": "nx run database:migrate",
    "db:seed": "node scripts/seed-database.js",
    "db:validate": "node scripts/validate-seed-data.js",
    "health": "curl -f http://localhost:4000/api/health && curl -f http://localhost:3000/",
    "health:full": "bash scripts/deploy-prod.sh health",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules packages/*/node_modules services/*/node_modules",
    "commit": "cz",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@nx/devkit": "21.5.3",
    "@nx/eslint": "21.5.3",
    "@nx/eslint-plugin": "21.5.3",
    "@nx/jest": "21.5.3",
    "@nx/js": "21.5.3",
    "@nx/nest": "21.5.3",
    "@nx/next": "21.5.3",
    "@nx/node": "21.5.3",
    "@nx/playwright": "21.5.3",
    "@nx/react": "21.5.3",
    "@nx/vite": "21.5.3",
    "@nx/web": "21.5.3",
    "@nx/webpack": "21.5.3",
    "@nx/workspace": "21.5.3",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/react": "16.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "20.19.9",
    "@types/react": "19.1.14",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^3.0.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "nx": "21.5.3",
    "prettier": "^3.3.0",
    "react-native-web": "~0.20.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.4.0",
    "vite": "^7.0.0",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@nestjs/cli": "11.0.10",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.8",
    "@socket.io/redis-adapter": "^8.3.0",
    "next": "^15.5.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "~0.79.3",
    "react-native-image-picker": "^8.2.1",
    "react-native-netinfo": "^1.1.0",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-signature-canvas": "^5.0.1",
    "recharts": "^3.2.1",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.1"
  }
}
