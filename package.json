{
  "name": "simplepro-v3",
  "version": "1.0.0",
  "description": "SimplePro - Moving Company Management System",
  "private": true,
  "author": "Simple Moves",
  "license": "PROPRIETARY",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"nx dev api\" \"nx dev web\"",
    "dev:api": "nx dev api",
    "dev:web": "nx dev web",
    "build": "nx run-many --target=build --all --parallel",
    "test": "nx run-many --target=test --all --parallel",
    "test:api": "nx test api",
    "test:api:unit": "cd apps/api && npm run test:unit",
    "test:api:integration": "cd apps/api && npm run test:integration",
    "test:web": "nx test web",
    "test:e2e": "nx run-many --target=e2e --all --parallel",
    "lint": "nx run-many --target=lint --all --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "deploy:dev": "bash scripts/deploy-dev.sh",
    "deploy:prod": "bash scripts/deploy-prod.sh",
    "db:migrate": "nx run database:migrate",
    "db:seed": "node scripts/seed-database.js",
    "db:validate": "node scripts/validate-seed-data.js",
    "health": "curl -f http://localhost:4000/api/health && curl -f http://localhost:3000/",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules packages/*/node_modules services/*/node_modules"
  },
  "devDependencies": {
    "@nx/devkit": "19.8.14",
    "@nx/eslint": "19.8.14",
    "@nx/eslint-plugin": "19.8.14",
    "@nx/jest": "19.8.14",
    "@nx/js": "19.8.14",
    "@nx/nest": "19.8.14",
    "@nx/next": "19.8.14",
    "@nx/node": "19.8.14",
    "@nx/playwright": "19.8.14",
    "@nx/react": "19.8.14",
    "@nx/vite": "19.8.14",
    "@nx/webpack": "^21.5.3",
    "@nx/workspace": "19.8.14",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/react": "15.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "nx": "19.8.14",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
