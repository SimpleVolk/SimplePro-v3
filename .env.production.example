# SimplePro Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Build Information
BUILD_DATE=2025-10-02
VCS_REF=main
VERSION=1.0.0

# MongoDB Replica Set Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGODB_DATABASE=simplepro_prod

# MongoDB Replica Set Connection String
# Format: mongodb://username:password@host1:port1,host2:port2,host3:port3/database?options
MONGODB_URI=mongodb://admin:CHANGE_ME_STRONG_PASSWORD_HERE@mongodb-primary:27017,mongodb-secondary1:27017,mongodb-secondary2:27017/simplepro_prod?replicaSet=simplepro-rs&authSource=admin&retryWrites=true&w=majority

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_CONNECT_TIMEOUT=10000
MONGODB_WRITE_TIMEOUT=10000

# MongoDB Read Preference (primary, primaryPreferred, secondary, secondaryPreferred, nearest)
MONGODB_READ_PREFERENCE=secondaryPreferred

# MongoDB Auth Source
MONGODB_AUTH_SOURCE=admin

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# JWT Secrets (MUST be changed in production)
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_SUPER_SECRET_REFRESH_KEY_MINIMUM_32_CHARS

# MinIO S3 Storage
MINIO_ROOT_USER=CHANGE_ME_MINIO_ADMIN
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_STRONG_PASSWORD
MINIO_BROWSER_REDIRECT_URL=https://files.yourdomain.com

# Application URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-app-password
SMTP_FROM=SimplePro <noreply@yourdomain.com>

# SMS Configuration (Optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Optional - Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Monitoring (Grafana)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=simplepro-backups
BACKUP_S3_REGION=us-east-1
