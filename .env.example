# Environment Configuration for SimplePro V3
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000
API_PORT=3001

# Database
MONGODB_URI=mongodb://admin:simplepro_dev_2024@localhost:27017/simplepro?authSource=admin
MONGODB_PASSWORD=simplepro_dev_2024

# Redis
REDIS_URL=redis://:simplepro_redis_2024@localhost:6379
REDIS_PASSWORD=simplepro_redis_2024

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=simplepro_minio_2024
MINIO_USE_SSL=false
MINIO_BUCKET=simplepro-uploads

# Email (Development uses Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@simplemoves.com

# Twilio (SMS - leave empty in development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Stripe (Payments - use test keys)
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Google Maps API
GOOGLE_MAPS_API_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your-session-secret-change-in-production
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring (optional)
SENTRY_DSN=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_LOGS=true