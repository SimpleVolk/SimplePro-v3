{
  "version": "1.0.0",
  "lastUpdated": "2024-09-19T00:00:00Z",
  "description": "Default pricing rules for SimplePro moving services",

  "serviceRates": [
    {
      "service": "local",
      "baseRate": 150,
      "unit": "per_hour",
      "minimumCharge": 400,
      "description": "Local moves within 50 miles, 2-person crew base rate"
    },
    {
      "service": "long_distance",
      "baseRate": 1.25,
      "unit": "per_pound",
      "minimumCharge": 2500,
      "description": "Long distance moves over 50 miles, weight-based pricing"
    },
    {
      "service": "storage",
      "baseRate": 8,
      "unit": "per_cubic_foot",
      "minimumCharge": 150,
      "description": "Monthly storage pricing per cubic foot"
    },
    {
      "service": "packing_only",
      "baseRate": 85,
      "unit": "per_hour",
      "minimumCharge": 200,
      "description": "Packing services without moving"
    }
  ],

  "pricingRules": [
    {
      "id": "base_local_rate",
      "name": "Base Local Moving Rate",
      "description": "Standard hourly rate for local moves with 2-person crew",
      "category": "base_pricing",
      "priority": 1,
      "conditions": [
        {
          "field": "service",
          "operator": "eq",
          "value": "local"
        }
      ],
      "actions": [
        {
          "type": "add_fixed",
          "amount": 150,
          "description": "Base 2-person crew hourly rate",
          "targetField": "basePrice"
        }
      ],
      "isActive": true,
      "applicableServices": ["local"],
      "version": "1.0.0"
    },

    {
      "id": "crew_size_adjustment",
      "name": "Additional Crew Members",
      "description": "Extra charge for each crew member beyond 2",
      "category": "base_pricing",
      "priority": 2,
      "conditions": [
        {
          "field": "crewSize",
          "operator": "gt",
          "value": 2
        }
      ],
      "actions": [
        {
          "type": "add_fixed",
          "amount": 75,
          "description": "Additional crew member per hour (crewSize - 2) * 75",
          "targetField": "basePrice"
        }
      ],
      "isActive": true,
      "applicableServices": ["local", "long_distance"],
      "version": "1.0.0"
    },

    {
      "id": "weight_heavy_surcharge",
      "name": "Heavy Weight Surcharge",
      "description": "Additional charge for moves over 8,000 lbs",
      "category": "weight_based",
      "priority": 10,
      "conditions": [
        {
          "field": "totalWeight",
          "operator": "gt",
          "value": 8000
        }
      ],
      "actions": [
        {
          "type": "add_percentage",
          "amount": 0.15,
          "description": "15% surcharge for heavy shipments over 8,000 lbs"
        }
      ],
      "isActive": true,
      "applicableServices": ["local", "long_distance"],
      "version": "1.0.0"
    },

    {
      "id": "volume_large_surcharge",
      "name": "High Volume Surcharge",
      "description": "Additional charge for moves over 1,500 cubic feet",
      "category": "volume_based",
      "priority": 11,
      "conditions": [
        {
          "field": "totalVolume",
          "operator": "gt",
          "value": 1500
        }
      ],
      "actions": [
        {
          "type": "add_percentage",
          "amount": 0.1,
          "description": "10% surcharge for high-volume shipments over 1,500 cu ft"
        }
      ],
      "isActive": true,
      "applicableServices": ["local", "long_distance"],
      "version": "1.0.0"
    },

    {
      "id": "long_distance_rate",
      "name": "Long Distance Base Rate",
      "description": "Weight-based pricing for long distance moves",
      "category": "distance_based",
      "priority": 5,
      "conditions": [
        {
          "field": "service",
          "operator": "eq",
          "value": "long_distance"
        },
        {
          "field": "distance",
          "operator": "gt",
          "value": 50,
          "logicalOperator": "and"
        }
      ],
      "actions": [
        {
          "type": "multiply",
          "amount": 1.25,
          "description": "$1.25 per pound for long distance moves",
          "targetField": "totalWeight"
        }
      ],
      "isActive": true,
      "applicableServices": ["long_distance"],
      "version": "1.0.0"
    },

    {
      "id": "distance_surcharge_200",
      "name": "Extra Long Distance Surcharge",
      "description": "Additional charge for moves over 200 miles",
